  <%= f.error_messages %>

  
    First Name<br />
    <%= f.text_field :first_name %>
  </p>
  <p>
    Middle Name<br />
    <%= f.text_field :middle_name %>
  </p>
  <p>
   Surname <br />
    <%= f.text_field :surname %>
  </p>

  <p>
   Gender  
   <%= f.select(:gender, [['Male', 'Male'], ['Female', 'Female']],{:include_blank => true})%>
