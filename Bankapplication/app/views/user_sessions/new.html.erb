<body bgcolor="#E6E6FA">
<%= stylesheet_link_tag 'style' %>
<div id="loginpage">
<h1>Login Here</h1>

<% form_for(@user_session,:url => login_path) do |f| %>

  <%= f.error_messages %>
  <p>
   User Name <br />
  <%= f.text_field :login %><br />
  <br />
  <%= f.label :password %><br />
  <%= f.password_field :password %><br />
  <br />
  <%= f.check_box :remember_me %><%= f.label :remember_me %><br />
  <br/>
  <%= f.submit "Login" %>

<% end %>

	<%= link_to image_tag('images.jpg'), new_user_path %> </div>
